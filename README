<%= link_to "CCB", root_path, :class => 'brand' %>
<ul class="nav">
  <% if user_signed_in? %>
    <li>
    <%= link_to 'Sair', destroy_user_session_path, :method=>'delete' %>
    </li>
  <% else %>
    <li>
    <%= link_to 'Identificar-se', new_user_session_path %>
    </li>
  <% end %>
  <% if user_signed_in? %>
    <li>
    <%= link_to 'Editar a conta', edit_user_registration_path %>
    </li>
    <% if current_user.has_role? :admin %>
      <li>
      <%= link_to 'Administrador', users_path %>
      </li>
    <% end %>
  <% else %>
    <li>
    <%= link_to 'Criar novo usuário', new_user_registration_path %>
    </li>
  <% end %>
</ul>






