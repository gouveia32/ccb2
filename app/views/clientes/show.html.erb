<%- model_class = Cliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @cliente.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contato_funcao) %>:</strong></dt>
  <dd><%= @cliente.contato_funcao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contato_nome) %>:</strong></dt>
  <dd><%= @cliente.contato_nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cgc_cpf) %>:</strong></dt>
  <dd><%= @cliente.cgc_cpf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inscr_estadual) %>:</strong></dt>
  <dd><%= @cliente.inscr_estadual %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endereco) %>:</strong></dt>
  <dd><%= @cliente.endereco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cidade) %>:</strong></dt>
  <dd><%= @cliente.cidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado) %>:</strong></dt>
  <dd><%= @cliente.estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cep) %>:</strong></dt>
  <dd><%= @cliente.cep %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone1) %>:</strong></dt>
  <dd><%= @cliente.telefone1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone2) %>:</strong></dt>
  <dd><%= @cliente.telefone2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone3) %>:</strong></dt>
  <dd><%= @cliente.telefone3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @cliente.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:obs) %>:</strong></dt>
  <dd><%= @cliente.obs %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preco_base) %>:</strong></dt>
  <dd><%= @cliente.preco_base %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clientes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_path(@cliente), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= link_to t('.new', :default => t("helpers.links.new")),  new_cliente_path,  :class => 'btn btn-primary' %>
</div>
