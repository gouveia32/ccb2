<%- model_class = Fornecedor -%>
<div class="page-header">
  <ul class="span7">
    <h1>.:<%=t '.title', :default => 'Fornecedores' %>:.</h1>
  </ul>
  <ul  class="span5 flickr_pagination">
  <br>
    <%= will_paginate @clientes, :container => false %>
    <%= link_to t('.new', :default => t("helpers.links.new")),  new_fornecedor_path,  :class => 'btn btn-xs btn-primary' %>
  </ul>
</div>
<table class="table table-condensed table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:contato_nome) %></th>
      <th><%= model_class.human_attribute_name(:telefone1) %></th>
      <th><%= model_class.human_attribute_name(:telefone2) %></th>
      <th><%= model_class.human_attribute_name(:telefone3) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= link_to fornecedor.id, fornecedor_path(fornecedor) %></td>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.contato_nome %></td>
        <td><%= fornecedor.telefone1 %></td>
        <td><%= fornecedor.telefone2 %></td>
        <td><%= fornecedor.telefone3 %></td>
        <td><%= fornecedor.email %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fornecedor_path(fornecedor), :class => 'btn btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fornecedor_path(fornecedor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination" >
    <div class="page_info">
      <%= page_entries_info @fornecedors if @show_pagination %>
     </div>
         <%= will_paginate @fornecedors, :container => false -%>
</div>